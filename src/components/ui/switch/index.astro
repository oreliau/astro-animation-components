---
interface Props {
  id: string;
}
const { id } = Astro.props;
---

<label for={id}>
  <input type="checkbox" id={id} />
  <slot />
</label>

<style>
  input {
    appearance: none;
    position: relative;
    display: inline-block;
    background-color: #d3d3d3;
    opacity: 0.8;
    height: 1.65rem;
    width: 2.75rem;
    vertical-align: middle;
    border-radius: 2rem;
    box-shadow: 0px 1px 3px #0003 inset;
    transition:
      0.3s ease-out background-color,
      0.3s linear opacity;
  }

  input:hover {
    opacity: 1;
  }

  input:checked {
    opacity: 1;
    background-color: #1ac748;
  }

  input::before {
    content: "";
    display: block;
    width: 1.25rem;
    height: 1.25rem;
    background-color: white;
    border-radius: 1.2rem;
    position: absolute;
    top: 0.2rem;
    left: 0.2rem;
    box-shadow: 0px 1px 3px #0003;
    transition: 0.22s ease-in-out transform;
    transform: translateX(0rem);
  }

  input:checked::before {
    transform: translateX(1.1rem);
  }

  input:focus-visible {
    outline: 2px solid dodgerblue;
    outline-offset: 2px;
  }

  /* input:focus {
    outline: transparent;
  } */
</style>
